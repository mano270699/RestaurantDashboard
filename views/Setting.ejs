        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }
        
        form {
            width: 300px;
            height: 400px;
            /*background: #333;*/
            margin: 10px;
            padding: 15px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        
        .image {
            width: 100px;
            height: 100px;
            /*background: #3664fd;*/
            background: transparent;
            border-radius: 50%;
            margin: 0 auto;
            overflow: hidden;
            border: 1px solid #33333359;
        }
        
        .img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        i.fa.fa-camera {
            position: relative;
            float: right;
            left: 140px;
            bottom: 30px;
            /*background: #3663fd;*/
            background: #FA640F linear-gradient(180deg, #FA640F, #FA640F) repeat-x;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            color: #fff;
        }
        
        .input {
            font-family: 'Poppins', sans-serif;
            display: block;
            margin: 10px;
            width: 300px;
            padding: 10px;
            border-radius: 20px;
            border: none;
        }
        
        .button {
            margin: 10px auto;
            width: 30%;
            padding: 10px;
            display: block;
            border: 0;
            background: #FA640F linear-gradient(180deg, #FA640F, #FA640F) repeat-x;
            position: relative;
            left: 10px;
            top: 15px;
            border-radius: 5px;
            color: #fff;
            font-size: 15px;
            cursor: pointer;
        }
        
        .label-file {
            cursor: pointer;
            color: #FA640F;
            font-weight: bold;
        }
        
        input#file {
            display: none;
        }
    </style>
</head>

